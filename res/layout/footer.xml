<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commonlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/llheader"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="#FFFFFF" >

            <ImageView
                android:id="@+id/app_image_header"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:contentDescription="Grid Image"
                android:src="@drawable/icon_small"
                android:layout_centerHorizontal="true" >
            </ImageView>

            <Button
                android:id="@+id/button_signin"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/open_blank"
                android:text="Sign In"
                android:textSize="30dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lldata"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llfooter"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@drawable/open_blank"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >

        <Button
            android:id="@+id/library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_library"
            android:padding="10dp"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_store"
            android:padding="10dp"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_contents"
            android:padding="10dp"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_cover"
            android:padding="10dp"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_settings"
            android:padding="10dp"
            android:textColor="#FFFFFF" >
        </Button>

        <Button
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_info"
            android:padding="10dp"
            android:textColor="#FFFFFF" >
        </Button>
    </LinearLayout>

</LinearLayout>